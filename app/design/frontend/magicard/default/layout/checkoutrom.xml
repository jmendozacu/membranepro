<layout version="0.1.0">

<!--
Overrides checkout billing and shipping block on opc page from checkout.xml
-->
    <checkout_onepage_index>
    	<reference name="content">
    		<reference name="checkout.onepage">
    			<action method="setTemplate"><template>checkoutrom/onepage.phtml</template></action>
		    	<reference name="checkout.onepage.billing">
		    		<action method="setTemplate"><template>checkoutrom/onepage/billing.phtml</template></action>
		    	</reference>
		    	<reference name="checkout.onepage.shipping">
		    		<action method="setTemplate"><template>checkoutrom/onepage/shipping.phtml</template></action>
		    	</reference>
			</reference>
		</reference>
    </checkout_onepage_index>

</layout>