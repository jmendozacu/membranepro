                <a href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>" class="product-image">
                    <img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize(360) ?>" alt="<?php echo $this->escapeHtml($_item->getName()) ?>" />
                </a>
                <div class="product-info">
                    <h3 class="product-name">
                        <a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->escapeHtml($_item->getName()) ?></a>
                    </h3>
                    <?php echo $this->getPriceHtml($_item, true, '-related') ?>
                    <?php /* if ($this->helper('wishlist')->isAllow()) : ?>
