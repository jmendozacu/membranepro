<?xml version="1.0"?>
<config>
    <tabs>
        <xj translate="label">
            <label>XJ Extensions</label>
            <sort_order>200</sort_order>
        </xj>
    </tabs>
    <sections>
        <xj_sticker>
            <class>separator-top</class>
            <label>XJ Sticker</label>
            <tab>xj</tab>
            <frontend_type>text</frontend_type>
            <sort_order>600</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <view translate="label">
                    <label>XJ Sticker Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label comment">
                            <label>Enable XJ Sticker On Frontend?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>

                        <!--
                        <enabled_pregenerate translate="label comment">
                            <label>Pregenerate Images with Stickers</label>
                            <comment>For stores with huge traffic. Generate images when product saves. Saves performance.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled_pregenerate>
                        -->

                        <allowed_attributes translate="label comment">
                            <label>Allowed Image Attributes</label>
                            <comment>For chosen attributes only stickers will be added </comment>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>xj_sticker/product_attribute_source_images</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </allowed_attributes>
                    </fields>
                </view>
            </groups>
        </xj_sticker>
    </sections>
</config>
