<config>
    <modules>
        <MageWorx_SeoBase>
            <version>3.18.1</version>
        </MageWorx_SeoBase>
    </modules>    
    <frontend>
        <translate>
            <modules>
                <MageWorx_SeoBase>
                    <files>
                        <default>MageWorx_SeoBase.csv</default>
                    </files>
                </MageWorx_SeoBase>
            </modules>
        </translate>        
        <events>                      
            <core_block_abstract_to_html_after>
                <observers>                    
                    <seosuite>
                        <type>singleton</type>
                        <class>MageWorx_SeoBase_Model_Observer</class>                        
                        <method>toHtmlBlockFrontAfter</method>
                    </seosuite>
                </observers>
            </core_block_abstract_to_html_after>
            <core_block_abstract_prepare_layout_after>
                <observers>
                    <seosuite>
                        <type>singleton</type>
                        <class>MageWorx_SeoBase_Model_Observer</class>
                        <method>coreBlockAbstractPrepareLayoutAfter</method>
                    </seosuite>
                </observers>
            </core_block_abstract_prepare_layout_after>
        </events>
    </frontend>
    <global>
        <models>
            <seosuite>
                <class>MageWorx_SeoBase_Model</class>
                <resourceModel>seosuite_mysql4</resourceModel>
            </seosuite>
            <seosuite_mysql4>
                <class>MageWorx_SeoBase_Model_Mysql4</class>
            </seosuite_mysql4>
            <tag>
                <rewrite>
                    <tag>MageWorx_SeoBase_Model_Tag</tag>
                </rewrite>
            </tag>
        </models>
        <resources>
            <seobase_setup>
                <setup>
                    <module>MageWorx_SeoBase</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </seobase_setup>
            <seobase_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </seobase_write>
            <seobase_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </seobase_read>
        </resources>
        <blocks>
            <seosuite>
                <class>MageWorx_SeoBase_Block</class>
            </seosuite>
            <page>
                <rewrite>
                    <html>MageWorx_SeoBase_Block_Page_Html</html>
                    <html_head>MageWorx_SeoBase_Block_Page_Html_Head</html_head>
                    <html_pager>MageWorx_SeoBase_Block_Page_Html_Pager</html_pager>
                </rewrite>
            </page>
            <cms>
                <rewrite>
                    <page>MageWorx_SeoBase_Block_Cms_Page</page>
                </rewrite>
            </cms>
            <rss>
                <rewrite>
                    <list>MageWorx_SeoBase_Block_Rss_List</list>
                    <catalog_category>MageWorx_SeoBase_Block_Rss_Catalog_Category</catalog_category>
                    <catalog_new>MageWorx_SeoBase_Block_Rss_Catalog_New</catalog_new>
                    <catalog_special>MageWorx_SeoBase_Block_Rss_Catalog_Special</catalog_special>
                    <catalog_salesrule>MageWorx_SeoBase_Block_Rss_Catalog_Salesrule</catalog_salesrule>
                </rewrite>
            </rss>
            <review>
                <rewrite>
                    <helper>MageWorx_SeoBase_Block_Review_Helper</helper>
                    <product_view_list>MageWorx_SeoBase_Block_Review_Product_View_List</product_view_list>
                    <view>MageWorx_SeoBase_Block_Review_View</view>
                </rewrite>
            </review>
        </blocks>
        <helpers>
            <seosuite>
                <class>MageWorx_SeoBase_Helper</class>
            </seosuite>
        </helpers>
        <events>
            <controller_front_init_routers>
                <observers>
                    <seosuite>
                        <type>singleton</type>
                        <class>MageWorx_SeoBase_Controller_Router</class>
                        <method>initControllerRouters</method>
                    </seosuite>
                </observers>
            </controller_front_init_routers>
            <controller_front_init_before>
                <observers>
                    <seosuite>
                        <type>singleton</type>
                        <class>MageWorx_SeoBase_Model_Observer</class>
                        <method>redirectHome</method>
                    </seosuite>
                </observers>
            </controller_front_init_before>
        </events>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <MageWorx_SeoBase>
                    <files>
                        <default>MageWorx_SeoBase.csv</default>
                    </files>
                </MageWorx_SeoBase>
            </modules>
        </translate>
        <events>
            <adminhtml_catalog_product_edit_prepare_form>
                <observers>
                    <seosuite>
                        <type>singleton</type>
                        <class>MageWorx_SeoBase_Model_Observer_Product</class>
                        <method>modifyFormFieldForProductAttributes</method>
                    </seosuite>
                </observers>
            </adminhtml_catalog_product_edit_prepare_form>
            <catalog_product_save_before>
                <observers>
                    <mageworx_seoxtemplates_modify_product_properties>
                        <class>MageWorx_SeoBase_Model_Observer_Product</class>
                        <method>prepareCanonical</method>
                    </mageworx_seoxtemplates_modify_product_properties>
                </observers>
            </catalog_product_save_before>
            <adminhtml_catalog_category_edit_prepare_form>
                <observers>
                    <seosuite>
                        <type>singleton</type>
                        <class>MageWorx_SeoBase_Model_Observer_Category</class>
                        <method>modifyFormFieldForProductAttributes</method>
                    </seosuite>
                </observers>
            </adminhtml_catalog_category_edit_prepare_form>
            <adminhtml_catalog_product_attribute_edit_prepare_form>
                <observers>
                    <seosuite>
                        <class>MageWorx_SeoBase_Model_Observer</class>
                        <method>prepareAttributeEditForm</method>
                    </seosuite>
                </observers>
            </adminhtml_catalog_product_attribute_edit_prepare_form>
            <adminhtml_cms_page_edit_tab_meta_prepare_form>
                <observers>
                    <seosuite>
                        <type>singleton</type>
                        <class>MageWorx_SeoBase_Model_Observer_Page</class>
                        <method>addFormFieldsForCmsPage</method>
                    </seosuite>
                </observers>
            </adminhtml_cms_page_edit_tab_meta_prepare_form>
            <core_config_data_save_before>
                <observers>
                    <seosuite>
                        <type>singleton</type>
                        <class>MageWorx_SeoBase_Model_Observer</class>
                        <method>coreConfigDataSaveBefore</method>                        
                    </seosuite>
                </observers>
            </core_config_data_save_before>
            <adminhtml_catalog_product_form_prepare_excluded_field_list>
                <observers>
                    <seosuite>
                        <type>singleton</type>
                        <class>MageWorx_SeoBase_Model_Observer_Product</class>
                        <method>modifyProductAttributesInMassAction</method>                        
                    </seosuite>
                </observers>
            </adminhtml_catalog_product_form_prepare_excluded_field_list>
        </events>        
    </adminhtml>
    <default>
        <mageworx_seo>
            <seosuite>
                <enabled>1</enabled>
                <trailing_slash>1</trailing_slash>
                <trailing_slash_home_page>0</trailing_slash_home_page>
                <ignore_pages>
<![CDATA[catalogsearch_result_index
catalogsearch_advanced_index
catalogsearch_advanced_result
checkout_cart_index
checkout_onepage_index]]>
                </ignore_pages>                
                <noindex_pages_user>
<![CDATA[dir=*
order=*
mode=*]]>
                </noindex_pages_user>                
                <noindex_pages><![CDATA[^catalogsearch_.+,^customer_.+,^checkout_.+,^contacts_.+,^wishlist_.+,^catalog_product_compare_.+,.*?_product_send$,^tag_.+,^rss_.+]]></noindex_pages>
                <product_canonical_url>3</product_canonical_url>
                <reviews_friendly_urls>1</reviews_friendly_urls>
                <enable_link_rel>1</enable_link_rel>
                <enable_canonical_tag_for_layered_navigation>1</enable_canonical_tag_for_layered_navigation>
                <use_product_canonical_for_review>0</use_product_canonical_for_review>
                <add_canonical_url_port>0</add_canonical_url_port>
                <canonical_associated_product>0</canonical_associated_product>
                <canonical_configurable>default</canonical_configurable>
                <canonical_bundle>default</canonical_bundle>
                <canonical_grouped>default</canonical_grouped>
                <product_use_categories>1</product_use_categories>
                <count_filters_for_noindex></count_filters_for_noindex>
                <use_limit_all>1</use_limit_all>
            </seosuite>     
            <alternate_url>
                <enabled>0</enabled>
                <enabled_category>1</enabled_category>
                <enabled_product>1</enabled_product>
                <enabled_cms>0</enabled_cms>
            </alternate_url>                
            <tools>
                <show_action_name>no</show_action_name>
            </tools>
        </mageworx_seo>
    </default>
</config>