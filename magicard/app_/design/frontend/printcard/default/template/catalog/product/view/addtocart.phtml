<?php $_product = $this->getProduct(); ?>
<?php $priceOnDemand = Mage::getModel('catalog/product')->load($_product->getId())->getAttributeText('price_on_demand'); ?>
<?php $buttonTitle = $this->__('Add to Cart'); ?>
<?php if($priceOnDemand=='Da'): ?>
	<div class="add-to-cart">
		<button type="button" title="<?php echo $this->__('Ask for offer') ?>" class="button" onclick="setLocation('<?php echo $this->getUrl('contact/vanzari/').'?sku='.$_product->getSku() ?>')"><span><span><?php echo $this->__('Ask for offer') ?></span></span></button>
	</div>
<?php elseif($_product->isSaleable()): ?>
    <div class="add-to-cart">
        <button type="button" title="<?php echo $buttonTitle ?>" class="button" onclick="productAddToCartForm.submit(this)"><span><span><?php echo $buttonTitle ?></span></span></button>
        <?php if(!$_product->isGrouped()): ?>
        <input type="text" name="qty" id="qty" maxlength="12" value="<?php echo $this->getProductDefaultQty() * 1 ?>" title="<?php echo $this->__('Qty') ?>" class="input-text qty" />
        <label for="qty"><?php echo $this->__('Qty') ?></label>
        <?php endif; ?>
        <?php echo $this->getChildHtml('', true, true) ?>
    </div>
<?php endif; ?>
