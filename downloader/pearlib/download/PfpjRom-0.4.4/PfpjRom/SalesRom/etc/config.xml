<config>
	<modules>
		<PfpjRom_SalesRom>
			<version>0.4.0</version>
			<depends>
                <Mage_Sales />
            </depends>
		</PfpjRom_SalesRom>
    </modules>

    <adminhtml>
        <translate>
            <modules>
                <PfpjRom_SalesRom>
                    <files>
                        <default>PfpjRom_All.csv</default>
                    </files>
                </PfpjRom_SalesRom>
            </modules>
        </translate>
    </adminhtml>

     <frontend>
        <translate>
            <modules>
                <PfpjRom_SalesRom>
                    <files>
                        <default>PfpjRom_All.csv</default>
                    </files>
                </PfpjRom_SalesRom>
            </modules>
        </translate>
        <layout>
			<updates>
				<salesrom>
					<file>salesrom.xml</file>
				</salesrom>
			</updates>
		</layout>
    </frontend>

    <global>
    	<fieldsets>
    		<sales_copy_order_billing_address>
                <pfpj_tip_pers><to_order>*</to_order></pfpj_tip_pers>
                <pfpj_cui><to_order>*</to_order></pfpj_cui>
                <pfpj_reg_com><to_order>*</to_order></pfpj_reg_com>
                <pfpj_banca><to_order>*</to_order></pfpj_banca>
                <pfpj_iban><to_order>*</to_order></pfpj_iban>
                <pfpj_cnp><to_order>*</to_order></pfpj_cnp>
                <pfpj_serienr_buletin><to_order>*</to_order></pfpj_serienr_buletin>
                <pfpj_for_billing><to_order>*</to_order></pfpj_for_billing>
                <pfpj_for_shipping><to_order>*</to_order></pfpj_for_shipping>
            </sales_copy_order_billing_address>
            <sales_copy_order_shipping_address>
                <pfpj_tip_pers><to_order>*</to_order></pfpj_tip_pers>
                <pfpj_cui><to_order>*</to_order></pfpj_cui>
                <pfpj_reg_com><to_order>*</to_order></pfpj_reg_com>
                <pfpj_banca><to_order>*</to_order></pfpj_banca>
                <pfpj_iban><to_order>*</to_order></pfpj_iban>
                <pfpj_cnp><to_order>*</to_order></pfpj_cnp>
                <pfpj_serienr_buletin><to_order>*</to_order></pfpj_serienr_buletin>
                <pfpj_for_billing><to_order>*</to_order></pfpj_for_billing>
                <pfpj_for_shipping><to_order>*</to_order></pfpj_for_shipping>
            </sales_copy_order_shipping_address>
            <sales_convert_quote_address>
                <pfpj_tip_pers><to_order_address>*</to_order_address><to_customer_address>*</to_customer_address></pfpj_tip_pers>
                <pfpj_cui><to_order_address>*</to_order_address><to_customer_address>*</to_customer_address></pfpj_cui>
                <pfpj_reg_com><to_order_address>*</to_order_address><to_customer_address>*</to_customer_address></pfpj_reg_com>
                <pfpj_banca><to_order_address>*</to_order_address><to_customer_address>*</to_customer_address></pfpj_banca>
                <pfpj_iban><to_order_address>*</to_order_address><to_customer_address>*</to_customer_address></pfpj_iban>
                <pfpj_cnp><to_order_address>*</to_order_address><to_customer_address>*</to_customer_address></pfpj_cnp>
                <pfpj_serienr_buletin><to_order_address>*</to_order_address><to_customer_address>*</to_customer_address></pfpj_serienr_buletin>
                <pfpj_for_billing><to_order_address>*</to_order_address><to_customer_address>*</to_customer_address></pfpj_for_billing>
                <pfpj_for_shipping><to_order_address>*</to_order_address><to_customer_address>*</to_customer_address></pfpj_for_shipping>
            </sales_convert_quote_address>
            <sales_convert_order_address>
                <pfpj_tip_pers><to_quote_address>*</to_quote_address></pfpj_tip_pers>
                <pfpj_cui><to_quote_address>*</to_quote_address></pfpj_cui>
                <pfpj_reg_com><to_quote_address>*</to_quote_address></pfpj_reg_com>
                <pfpj_banca><to_quote_address>*</to_quote_address></pfpj_banca>
                <pfpj_iban><to_quote_address>*</to_quote_address></pfpj_iban>
                <pfpj_cnp><to_quote_address>*</to_quote_address></pfpj_cnp>
                <pfpj_serienr_buletin><to_quote_address>*</to_quote_address></pfpj_serienr_buletin>
                <pfpj_for_billing><to_quote_address>*</to_quote_address></pfpj_for_billing>
                <pfpj_for_shipping><to_quote_address>*</to_quote_address></pfpj_for_shipping>
            </sales_convert_order_address>
            <customer_address>
                <pfpj_tip_pers><to_quote_address>*</to_quote_address></pfpj_tip_pers>
                <pfpj_cui><to_quote_address>*</to_quote_address></pfpj_cui>
                <pfpj_reg_com><to_quote_address>*</to_quote_address></pfpj_reg_com>
                <pfpj_banca><to_quote_address>*</to_quote_address></pfpj_banca>
                <pfpj_iban><to_quote_address>*</to_quote_address></pfpj_iban>
                <pfpj_cnp><to_quote_address>*</to_quote_address></pfpj_cnp>
                <pfpj_serienr_buletin><to_quote_address>*</to_quote_address></pfpj_serienr_buletin>
                <pfpj_for_billing><to_quote_address>*</to_quote_address></pfpj_for_billing>
                <pfpj_for_shipping><to_quote_address>*</to_quote_address></pfpj_for_shipping>
            </customer_address>
		</fieldsets>

    	<helpers>
            <salesrom>
                <class>PfpjRom_SalesRom_Helper</class>
            </salesrom>
            <salesrom>
                <rewrite>
                	<tippers>PfpjRom_SalesRom_Helper_Tippers</tippers>
                </rewrite>
            </salesrom>
        </helpers>

        <models>
            <salesrom>
                <class>PfpjRom_SalesRom_Model</class>
                <resourceModel>salesrom_entity</resourceModel>
            </salesrom>
            <salesrom_entity>
                <class>PfpjRom_SalesRom_Model_Entity</class>
            </salesrom_entity>

            <sales>
            	<rewrite>
            		<quote_address>PfpjRom_SalesRom_Model_Quote_Address</quote_address>
            	</rewrite>
            </sales>
        </models>

        <resources>
            <salesrom_setup>
                <setup>
                    <module>PfpjRom_SalesRom</module>
                    <class>PfpjRom_SalesRom_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </salesrom_setup>
            <salesrom_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </salesrom_write>
            <salesrom_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </salesrom_read>
        </resources>

        <blocks>

        </blocks>
    </global>
</config>